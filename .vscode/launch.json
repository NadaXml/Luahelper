            "luaFileExtension": "",
            "connectionPort": 8818,
            "pathCaseSensitivity": true,
            "stopOnEntry": true,
            "useCHook": true,
            "autoPathMode": true,
            "logLevel": 1
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "LuaPanda-Attach"
